{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // Node.js standardı
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // import/export çevirisini sağlar
    "skipLibCheck": true, // Gereksiz kütüphane hatalarını atlar
    "forceConsistentCasingInFileNames": true,
    // Hatalara sebep olan o katı ayarları KAPATIYORUZ:
    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}