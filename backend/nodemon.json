{
  "watch": ["src"],
  "ext": "ts",
  "ignore": [
    "src/**/*.spec.ts",
    "node_modules/**",
    "dist/**",
    "logs/**",
    "*.log",
    ".git/**",
    "generated/**"
  ],
  "exec": "ts-node src/index.ts",
  "delay": 1000,
  "verbose": false,
  "restartable": "rs",
  "stdin": false,
  "env": {
    "NODE_ENV": "development"
  }
}